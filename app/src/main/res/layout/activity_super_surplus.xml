<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_super_surplus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bimahelpline.starhealth.activity.SuperSurplus">
    <RelativeLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tvPlan"
                        android:ems="6"
                        android:text="Plan"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etPlan"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tvPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tvSumInsured"
                        android:ems="6"
                        android:text="Sum Insured"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_centerVertical="true"
                        android:id="@+id/etSumInsured"
                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tvSumInsured"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_centerVertical="true"
                        android:ems="6"
                        android:text="Date Of Birth"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_centerVertical="true"

                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tvAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAdult"
                        android:layout_centerVertical="true"

                        android:ems="6"
                        android:text="Adult"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etAdult"
                        android:layout_centerVertical="true"

                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tvAdult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvChild"
                        android:layout_centerVertical="true"

                        android:ems="6"
                        android:text="Child"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etChild"
                        android:layout_centerVertical="true"

                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tvChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDeductible"
                        android:layout_centerVertical="true"

                        android:ems="6"
                        android:text="Deductible"
                        android:textSize="22sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/etDeductible"
                        android:ems="10"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="none"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tvDeductible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_above="@id/layoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        ads:adSize="FLUID"
        ads:adUnitId="@string/banner_ad_unit_id"/>
    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/calButton"
            android:theme="@style/AppTheme.Button"
            android:textColor="@color/colorText"
            android:text="Calculate"
            android:layout_gravity="center|start"
            android:height="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
