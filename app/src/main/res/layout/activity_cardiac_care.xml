<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cardiac_care"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bimahelpline.starhealth.activity.CardiacCare">

    <RelativeLayout
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tvSumInsured"
                            android:ems="6"
                            android:text="Sum Insured"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etSumInsured"
                            android:ems="10"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/tvSumInsured"
                            android:layout_toEndOf="@+id/tvSumInsured"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tvAge"
                            android:ems="6"
                            android:text="Date Of Birth"
                            android:textSize="22sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etAge"
                            android:ems="10"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/tvAge"
                            android:layout_toEndOf="@+id/tvAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tvPlan"
                            android:ems="6"
                            android:text="Plan"
                            android:textSize="22sp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/etPlan"
                            android:ems="10"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/tvPlan"
                            android:layout_toEndOf="@+id/tvPlan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_above="@+id/layoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="@string/banner_ad_unit_id"/>

        <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/calButton"
                android:layout_weight="1"
                android:text="Calculate"
                android:theme="@style/AppTheme.Button"
                android:textColor="#FFFFFF"
                android:height="60dp"
                android:textSize="22sp"
                android:layout_gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btPlanD"
                android:layout_weight="1"
                android:text="Plan Details"
                android:theme="@style/AppTheme.Button"
                android:textColor="#FFFFFF"
                android:height="60dp"
                android:textSize="22sp"
                android:layout_gravity="center|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
